@model Event

<h1>Modifier l'evenement</h1>

<form asp-action="Edit">
  <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" value="@Model.Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="EventDate"></label>
    <input asp-for="EventDate" class="form-control" value="@Model.EventDate.ToString("yyyy-MM-ddTHH:mm")" />
    <span asp-validation-for="EventDate" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="MaxParticipants"></label>
    <input asp-for="MaxParticipants" class="form-control" value="@Model.MaxParticipants" />
    <span asp-validation-for="MaxParticipants" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Location"></label>
    <input asp-for="Location" class="form-control" value="@Model.Location" />
    <span asp-validation-for="Location" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Modifier l'evenement</button>
</form>